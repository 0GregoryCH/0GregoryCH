@page
@model WebApp.Pages.Productos.EditModel
@{
}

<div id="AppEdit" class="container" data-entity="@JsonSerializer.Serialize(Model.Entity)" v-cloak>
    <div class="card">
        <div class="card-header">
            @(Model.id.HasValue? "Actualizar": "Nuevo Producto")
        </div>
        <div class="card-body">
            <form id="FormEdit" method="post">
                <input type="hidden" asp-for="Entity.IdProductos" v-model="Entity.IdProductos" />


                <div class="form-group mb-3">
                    <label for="Entity.IdProductos" class="form-label">Productos</label>

                    <select asp-for="Entity.IdCodigo" class="form-select" v-model="Entity.IdCodigo"
                            asp-items="@(new SelectList(Model.PedidosLista,"IdCodigo","Codigo"))" required>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.Categoria" class="form-label"> Categoria</label>
                    <input type="text" class="form-control" asp-for="Entity.Categoria" v-model="Entity.Categoria" maxlength="250" required>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.Nombre" class="form-label"> Nombre</label>
                    <input type="text" class="form-control" asp-for="Entity.Nombre" v-model="Entity.Nombre" maxlength="250" required>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.CantidadDisponible" class="form-label"> Cantidad Disponible</label>
                    <input type="number" class="form-control" asp-for="Entity.CantidadDisponible" v-model="Entity.CantidadDisponible" maxlength="250" required>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.Caracteristicas" class="form-label"> Caracteristicas</label>
                    <input type="text" class="form-control" asp-for="Entity.Caracteristicas" v-model="Entity.Caracteristicas" maxlength="250" required>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.Estado" class="form-label"> Estado</label>
                    <input type="radio" class="form-control" asp-for="Entity.Estado" v-model="Entity.Estado" maxlength="250" required>

                </div>



                <div class="row">
                    <div class="col-4">
                        <button type="button" @@click="Save" class="btn btn-primary">
                            @(Model.id.HasValue? "Actualizar": "Agregar")
                        </button>
                    </div>

                </div>

            </form>

        </div>
    </div>

</div>

@section Scripts
{

    <script defer src="~/App/Productos/Edit.js"></script>


}