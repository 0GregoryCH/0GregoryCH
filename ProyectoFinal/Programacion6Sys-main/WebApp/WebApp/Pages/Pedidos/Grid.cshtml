@page
@model WebApp.Pages.Pedidos.GridModel
@{
}
<div class="container-fluid">



    <div class="card">
        <div class="card-header">
            Pedido
        </div>
        <div class="card-body">



            <a class="btn btn-primary" asp-page="Edit">
                <i class='bx bxs-add-to-queue'></i>
            </a>



            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-bordered table table-striped table table-hover">
                        <thead>
                            <tr>
                                <th>IDCodigo</th>
                                <th>Cliente</th>
                                <th>Producto</th>
                                <th>Fecha Pedido</th>
                                <th>Cantidad</th>
                                <th>Sub Total</th>
                                <th>Envio</th>
                                <th>Iva</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tboby>
                            @foreach (var item in Model.GridList)
                            {
                                <tr>
                                    <td>@item.IdCodigo</td>
                                    <td>@item.IdClientes</td>
                                    <td>@item.IdProductos</td>
                                    <td>@item.FechaPedido.ToString("dd/MM/yyyy")</td>
                                    <td>@item.Cantidad</td>
                                    <td>@item.SubTotal</td>
                                    <td>@item.Envio</td>
                                    <td>@item.Iva</td>
                                    <td>@item.Total</td>




                                    <td>
                                        <a class="btn btn-primary" asp-page="Edit" asp-route-id="@item.IdCodigo"><i class='bx bx-edit-alt'></i></a>



                                        <button type="button" class="btn btn-danger" onclick="PedidoGrid.OnClickEliminar(@item.IdCodigo)">
                                            <i class='bx bx-trash'></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tboby>
                    </table>



                </div>
            </div>





        </div>
    </div>




</div>



@section Scripts{



    <script defer src="~/App/Pedidos/Grid.js"></script>
}