@page
@model WebApp.Pages.Compra.EditModel
@{
}
<div id="AppEdit" class="container" data-entity="@JsonSerializer.Serialize(Model.Entity)" v-cloak>
    <div class="card">
        <div class="card-header">
            @(Model.id.HasValue? "Actualizar": "Nueva Compra")
        </div>
        <div class="card-body">
            <form id="FormEdit" method="post">
                <input type="hidden" asp-for="Entity.IdCompra" v-model="Entity.IdCompra" />






                <div class="form-group mb-3">
                    <label for="Entity.ClientesId" class="form-label">Clientes</label>





                    <select asp-for="Entity.ClientesId" class="form-select" v-model="Entity.ClientesId"
                            asp-items="@(new SelectList(Model.ClientesLista,"ClientesId"))" required>
                    </select>
                </div>





                <div class="form-group mb-3">
                    <label for="Entity.ProductoId" class="form-label">Productos</label>





                    <select asp-for="Entity.ProductoId" class="form-select" v-model="Entity.ProductoId"
                            asp-items="@(new SelectList(Model.ProductoLista,"ProductoId"))" required>
                    </select>
                </div>
                <div class="form-group mb-3">
                    <label for="Entity.FechaCompra" class="form-label">Fecha Compra</label>
                    <input type="date" class="form-control" asp-for="Entity.FechaCompra" required>
                </div>
                <div class="form-group mb-3">
                    <label for="Entity.Monto" class="form-label">Monto</label>
                    <input type="number" class="form-control" asp-for="Entity.Monto" required>
                </div>
                <div class="form-group mb-3">
                    <label for="Entity.Impuesto" class="form-label">Impuesto</label>
                    <input type="number" class="form-control" asp-for="Entity.Impuesto" required>
                </div>
                <div class="form-group mb-3">
                    <label for="Entity.Total" class="form-label">Total</label>
                    <input type="number" class="form-control" asp-for="Entity.Total" required>
                </div>
                <div class="form-group mb-3">
                    <label for="Entity.Observaciones" class="form-label">Observaciones</label>
                    <input type="text" class="form-control" asp-for="Entity.Observaciones" maxlength="250" required>
                </div>



                <div class="form-group form-check form-switch">
                    <input type="checkbox" class="form-check-input" asp-for="Entity.Estado" value="true">
                    <label for="Entity.Estado" class="form-check-label"> </label>
                </div>

                <div class="row">
                    <div class="col-4">
                        <button type="button" @@click="Save" class="btn btn-primary">
                            @(Model.id.HasValue? "Actualizar": "Agregar")
                        </button>
                    </div>





                </div>





            </form>





        </div>
    </div>





</div>





@section Scripts
{





    <script defer src="~/App/Compra/Edit.js"></script>






}