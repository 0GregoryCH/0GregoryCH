@page
@model WebApp.Pages.Productos.GridModel
@{
}

<div class="container-fluid">

    <div class="card">
        <div class="card-header">
            Contrato
        </div>
        <div class="card-body">

            <a class="btn btn-primary" asp-page="Edit">
                <i class='bx bxs-add-to-queue'></i>
            </a>

            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-bordered table table-striped table table-hover">
                        <thead>
                            <tr>
                                <th>IdProductos</th>
                                <th>Categoria</th>
                                <th>Nombre</th>
                                <th>CantidadDisponible</th>
                                <th>Caracteristicas</th>
                                <th>Estado Fin</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tboby>
                            @foreach (var item in Model.GridList)
                            {
                                <tr>
                                    <td>@item.IdProductos</td>
                                    <td>@item.Pedidos.IdCodigo</td>
                                    <td>@item.Categoria</td>
                                    <td>@item.Nombre</td>
                                    <td>@item.CantidadDisponible</td>
                                    <td>@item.Caracteristicas</td>
                                    <td>@item.Estado</td>
                                    <td>
                                        <a class="btn btn-primary" asp-page="Edit" asp-route-id="@item.IdProductos"><i class='bx bx-edit-alt'></i></a>

                                        <button type="button" class="btn btn-danger" onclick="ProductosGrid.OnClickEliminar(@item.IdProductos)">
                                            <i class='bx bx-trash'></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tboby>
                    </table>

                </div>
            </div>



        </div>
    </div>


</div>

@section Scripts{

    <script defer src="~/App/Productos/Grid.js"></script>
}